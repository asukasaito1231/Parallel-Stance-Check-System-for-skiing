import glob
import matplotlib.pyplot as plt

angles = list(range(31))  # 0〜30
parallel_counts = []
not_parallel_counts = []

for i in angles:
    p_count = len(glob.glob(f"パラレル-{i}-*.png"))
    np_count = len(glob.glob(f"notパラレル-{i}-*.png"))

    parallel_counts.append(p_count)
    not_parallel_counts.append(np_count)

# 積み上げ棒グラフ
plt.bar(
    angles,
    parallel_counts,508007
    label="Parallel"
)

plt.bar(
    angles,
    not_parallel_counts,
    bottom=parallel_counts,  # ← ここが「積み上げ」
    label="Not parallel"
)

plt.xlabel("Shins angles")
plt.ylabel("Number of occurrences")
plt.title("Shins angles and parallel / not parallel distribution histogram")
plt.legend()

plt.show()
